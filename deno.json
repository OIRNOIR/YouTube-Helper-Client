{
	"compilerOptions": {
		"lib": ["deno.ns", "deno.window", "node"]
	},
	"tasks": {
		"lint": "deno x @biomejs/biome check . --write && deno lint",
		"style:check": "deno x @biomejs/biome ci . && deno lint",
		"typecheck": "deno check"
	},
	"imports": {
		"@biomejs/biome": "npm:@biomejs/biome@2.3.11",
		"@std/cli": "jsr:@std/cli@1.0.25",
		"emoji-regex": "npm:emoji-regex@10.6.0"
	},
	"permissions": {
		"default": {
			"read": true,
			"write": true,
			"env": true,
			"net": true,
			"run": true,
			"sys": true
		}
	}
}
